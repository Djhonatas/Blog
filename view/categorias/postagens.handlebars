<h1>{{categoria.nome}}</h1>

{{#each postagens}}

<div class="container postagem__container">
  <div >
    <h3 style="margin-top: 2rem;">{{titulo}}</h3><br>
    <p>{{descricao}}</p>
    <a href="/postagem/{{slug}}"><button>Leia mais</button></a><br>
    <small>Data de publicação: {{data}}</small>
    <hr>
  </div>
</div>

{{else}}
  <h5>Nenhuma postagem</h5>
{{/each}}