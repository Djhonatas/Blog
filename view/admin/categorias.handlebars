<h2 class="categoria__titulo">Lista de categorias</h2>
<hr>
<a href="/admin/categorias/add">
  <button type="button" class="btn">Nova categoria</button>
</a> 

{{#each categorias}}
  <div class="container categoria__container">
    <div class="card-body">
      <h4 class="nome">{{nome}}</h4>
      <small>Slug: {{slug}}</small><br>
      <small>Data de criação: {{date}}</small><br>
    
    <a href="/admin/categorias/edit/{{_id}}">
      <button class="a__btn">Editar</button>
    </a>
    <form action="/admin/categorias/deletar" method="post">
      <input  type="hidden" name="id" value="{{_id}}">
      <button class="form__btn" type="submit">Deletar </button>
    </form><br><br>
    </div>
  </div>

{{else}}
<h4 class="mt-3">Nenhuma categoria cadastrada</h4>
{{/each}}