{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="card">
  <div class="card-body">
    <h4>Nova postagem</h4>
   
    <form action="/admin/postagens/nova"  method="POST" enctype="multipart/form-data">
      <label for="titulo">Título</label>
        <input type="text" name="titulo" class="form-control" required>
        <label for="slug">Slug:</label>
        
        <input type="text" name="slug" class="form-control" required>
        <label class="text-justify" for="descricao">Descrição:</label>
      
        <input type="text" name="descricao" class="form-control" required>
        <label for="conteudo" class="text-justify">Conteúdo:</label>
        
        <textarea name="conteudo" class="form-control" required></textarea>
        <label for="categoria">Categoria</label>

        <input type="file" name="arquivo"  accept="image/png, image/jpeg, image/jpg">

        <select name="categoria" class="form-select">
          {{#each categorias}}
            <option value="{{_id}}" class="text-justify">{{nome}}</option>
            
          {{else}}
            <option value="0">Nenhuma categoria registrada</option>
          {{/each}}
        </select>
        <button type="submit">Criar postagem</button>
    </form>
  </div>
</div>