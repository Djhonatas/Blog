{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="container postagem__container">
  <div class="card-body">
    <h4 class="postagem__titulo">Editar postagem</h4><br>
    
    <form action="/admin/postagens/edit" method="post">
      <label for="titulo">Título:</label>
      <input type="hidden" value="{{postagem._id}}" name="id"> 
      <input type="text" name="titulo" class="form-control" value="{{postagem.titulo}}" required>
      
      <label for="slug">Slug:</label>
      <input type="text" name="slug" class="form-control" value="{{postagem.slug}}" required>
      
      <label for="descricao">Descrição:</label>
      <input type="text" name="descricao" class="form-control" value="{{postagem.descricao}}" required>
      
      <label for="conteudo">Conteúdo:</label>
      <textarea name="conteudo" class="form-control " required>{{postagem.conteudo}}</textarea><br>
      
      <label for="categoria">Categoria:</label>
      <select name="categoria" class="form-select">
        {{#each categorias}}
           <option value="{{_id}}">{{nome}}</option>
          {{else}}
           <option value="0">Nenhuma categoria registrada</option>
        {{/each}}
      </select> <br>
      
      <input class="postagem__imagem" type="file" name="arquivo"  accept="image/png, image/jpeg, image/jpg" value="{{postagem.imageName}}" required><br>

      <button class="btn " type="submit">Editar postagem</button>

    </form>
  </div>
</div>